        <!DOCTYPE html>
        <html lang="fr" class="dark-theme">
        <head>
          <meta charset="UTF-8">
          <title>Actualités de la Réanimation</title>
          <style>
            nav a { color: white; }
            .news-grid {
              display: grid;
              grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
              gap: 20px;
              margin: 30px 20px;
            }
            .news-card {
              background-color: white;
              border-radius: 10px;
              padding: 20px;
              box-shadow: 0 4px 10px rgba(0,0,0,0.1);
              transition: transform 0.2s ease;
              color: #333;
              cursor: pointer;
            }
            body.dark-theme .news-card {
              background-color: #2a2a3d;
              color: white;
            }
            .news-card:hover {
              transform: scale(1.02);
            }
            .news-date {
              font-size: 12px;
              color: #bbb;
              margin-top: 10px;
            }
            .news-content {
              display: none;
              margin-top: 10px;
              font-size: 14px;
              line-height: 1.4;
            }
            .news-card.open .news-content {
              display: block;
            }
          </style>
        </head>
        <body class="dark-theme">
          <header>
            <nav>
              <a href="/">Accueil</a>
              <a href="/actualites">Actualités</a>
            </nav>
          </header>

          <main>
            <h2 class="actualites-title">Dernières Actualités</h2>
            <div class="news-grid">
              <% actualites.forEach(function(actu, index) { %>
                <div class="news-card" onclick="toggleContent(<%= index %>)" id="card-<%= index %>">
                  <h3><%= actu.titre %></h3>
                  <p><%= actu.description %></p>
                  <div class="news-date">
                    Publié le <%= new Date(actu.datePublication).toLocaleDateString('fr-FR') %>
                  </div>
                  <div class="news-content">
                    <%= actu.contenu %>
                  </div>
                </div>
              <% }); %>
            </div>
          </main>

          <footer>
            &copy; 2025 Réanimation – Tous droits réservés
          </footer>

          <script>
            function toggleContent(index) {
              const card = document.getElementById('card-' + index);
              card.classList.toggle('open');
            }
          </script>
        </body>
        </html>