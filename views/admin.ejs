<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Connexion - Service de RÃ©animation</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #0d1117, #1f2937);
      color: #f0f0f0;
      height: 100vh;
      overflow: hidden;
    }

    main {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100%;
      padding: 60px 20px;
      backdrop-filter: blur(12px);
      background-color: rgba(255, 255, 255, 0.02);
      border-radius: 20px;
      margin: auto;
      box-shadow: 0 0 60px rgba(0, 123, 255, 0.05);
    }

    .admin-button {
      background: linear-gradient(135deg, #004aad, #007bff);
      color: #fff;
      border: none;
      border-radius: 18px;
      padding: 20px 40px;
      font-size: 22px;
      font-weight: 600;
      margin: 16px;
      width: 300px;
      cursor: pointer;
      box-shadow: 0 8px 25px rgba(0, 123, 255, 0.3);
      position: relative;
      overflow: hidden;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
    }

    .admin-button::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 10%, transparent 70%);
      animation: pulse 3s infinite;
      pointer-events: none;
      z-index: 0;
    }

    .admin-button i {
      font-size: 26px;
      z-index: 1;
      transition: transform 0.3s ease;
    }

    .admin-button span {
      z-index: 1;
      transition: transform 0.3s ease;
    }

    .admin-button:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 35px rgba(0, 123, 255, 0.4);
    }

    .admin-button:hover i,
    .admin-button:hover span {
      transform: scale(1.05);
    }

    @keyframes pulse {
      0% {
        transform: scale(1);
        opacity: 0.5;
      }
      50% {
        transform: scale(1.2);
        opacity: 0.7;
      }
      100% {
        transform: scale(1);
        opacity: 0.5;
      }
    }

    @media (max-width: 480px) {
      .admin-button {
        width: 90%;
        font-size: 18px;
      }
    }
  </style>
</head>
<body>

  <main>
    <!-- Bouton toujours visible -->
    <button class="admin-button" onclick="window.location.href='/utilisateurs'">
      <i class="fas fa-users"></i><span>Utilisateurs</span>
    </button>

    <% if (utilisateur && utilisateur.role === 'adminprincipal') { %>
      <!-- Bouton "Site" visible seulement pour adminprincipal -->
      <button class="admin-button" onclick="window.location.href='/site'">
        <i class="fab fa-internet-explorer"></i><span>Site</span>
      </button>

      <!-- Bouton "Historique" visible seulement pour adminprincipal -->
      <button class="admin-button" onclick="window.location.href='/logs'">
        <i class="fas fa-clock-rotate-left"></i><span>Historique</span>
      </button>
    <% } %>

    <!-- Bouton toujours visible -->
    <button class="admin-button" onclick="window.location.href='/messagerie'">
      <i class="fas fa-envelope"></i><span>Messagerie</span>
    </button>
  </main>

</body>
</html>