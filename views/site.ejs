    <!DOCTYPE html>
    <html>
    <head>
      <title>Admin - Actualit√©s</title>
    </head>
    <body>

      <h1>Ajouter une image</h1>
      <!-- ‚úÖ Formulaire d'upload vers Cloudinary -->
        <form action="/admin/upload" method="POST" enctype="multipart/form-data">
        <label>Ajouter une image au carrousel :</label><br>
        <input type="file" name="image" accept="image/*" required>
        <button type="submit">Uploader</button>
      </form>

      <h2>Images existantes</h2>
      <section class="carousel-container">
        <div class="carousel-slides" id="carouselSlides">
          <% if (imagesCarousel && imagesCarousel.length > 0) { %>
            <% imagesCarousel.forEach((img) => { %>
              <div>
                <!-- ‚úÖ Utilisation de l'URL Cloudinary -->
                <img src="<%= img.url %>" alt="Image du carousel" style="width:200px;">
                <a href="/admin/supprimer/<%= img._id %>">üóë Supprimer</a>
              </div>
            <% }) %>
          <% } else { %>
            <p>Aucune image.</p>
          <% } %>
        </div>
      </section>

      <h3>Ajouter une actualit√©</h3>
      <form action="/admin/ajouter-actualite" method="POST">
        <label>Titre</label>
        <input type="text" name="titre" required><br>

        <label>Description</label>
        <input type="text" name="description" required><br>

        <label>Contenu</label>
        <textarea name="contenu" required></textarea><br>

        <button type="submit">Publier</button>
      </form>

      <h4>Liste des actualit√©s</h4>
      <% if (actualites.length === 0) { %>
        <p>Aucune actualit√© pour le moment.</p>
      <% } else { %>
        <ul>
          <% actualites.forEach(actu => { %>
            <li>
              <strong><%= actu.titre %></strong><br>
              <small><%= new Date(actu.datePublication).toLocaleDateString('fr-FR') %></small><br>
              <p><%= actu.contenu %></p>
              <form action="/admin/supprimer-actualite/<%= actu._id %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Supprimer cette actualit√© ?')">Supprimer</button>
              </form>
            </li>
            <hr>
          <% }); %>
        </ul>
      <% } %>

    </body>
    </html>
